#!/bin/bash

# 固定のコマンド名
CMD="node ~/jsmod/noderun.js"

# 引数が少なくとも1つあることを確認
if [ $# -lt 1 ]; then
    echo "使用法: $0 <ファイル> [cmdへの引数...]"
    exit 1
fi

# 最初の引数を絶対パスに変換
file_path=$(realpath "$1")

# 残りの引数を配列に格納
args=("${@:2}")

# コマンドを実行（最初の引数を絶対パスに、残りの引数をそのまま渡す）
node ~/jsmod/noderun.js "$file_path" "${args[@]}"