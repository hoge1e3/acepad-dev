#!run
import {getFS} from "petit-node";
import {Counter} from "@hoge1e3/counter";

export async function main(mp){
  if(!mp){
    throw new Error("mount point");
  }
  mp=this.resolve(mp);
  await getFS().mountAsync(mp.path(),"idb",{
    dbName: mp.name().replace(/\/$/,""),
    storeName: "kvStore"
  });
}